<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="10"
    android:orientation="vertical">
    <LinearLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center|bottom"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/cv_avatar"
                app:cardCornerRadius="80dp">
                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/add_profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/add_images"
                android:layout_marginTop="-50dp"
                android:layout_marginLeft="65dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#111"
                android:textSize="24dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="TÀI KHOẢN"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="#111"/>
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/edit_account"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="24dp"
            android:textColor="#DF3A3A3A"
            android:textAlignment="viewStart"
            android:drawableLeft="@drawable/edit"
            android:text=" Chỉnh sửa tài khoản"
            android:background="@drawable/dangkylogin"/>
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="24dp"
            android:textColor="#DF3A3A3A"
            android:textAlignment="viewStart"
            android:drawableLeft="@drawable/logout"
            android:text=" Đăng xuất"
            android:background="@drawable/dangkylogin"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="THÔNG TIN"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="#111"/>

        <Button
            android:id="@+id/gt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/dangkylogin"
            android:drawableLeft="@drawable/info"
            android:text=" Giới thiệu"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#DF3A3A3A"
            android:textSize="24dp" />

        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/security_policy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#DF3A3A3A"
            android:textAllCaps="false"
            android:textSize="24dp"
            android:textAlignment="viewStart"
            android:drawableLeft="@drawable/icon_security"
            android:text=" Chính sách bảo mật"
            android:background="@drawable/dangkylogin"/>

    </LinearLayout>
</LinearLayout>