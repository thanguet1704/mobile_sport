<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.club.ClubSearching"
    android:weightSum="10"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <EditText
            android:id="@+id/edt_search_club"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:background="@drawable/edt_search_club_style"
            android:hint="Tìm kiếm câu lạc bộ"/>
        <Button
            android:id="@+id/btn_cancel_search"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="Hủy"
            android:textSize="24sp"
            android:textColor="#FFC107"
            android:textAllCaps="false"
            android:background="@drawable/btn_search_club_style"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lvClubSearchingAct_SearchClub"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>


</LinearLayout>