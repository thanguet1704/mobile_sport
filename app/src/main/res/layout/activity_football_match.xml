<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.FootballMatch">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMatchAct_HomeClub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgMatchAct_HomeClubAvt"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:src="@mipmap/ic_launcher" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Arsenal FC"
        android:textSize="16dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvMatchAct_HomeClub" />

    <TextView
        android:id="@+id/txtMatchAct_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:00"
        android:textSize="14dp"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintBottom_toTopOf="@id/imgMatchAct_Icon_VS"
        app:layout_constraintLeft_toRightOf="@id/cvMatchAct_HomeClub"
        app:layout_constraintRight_toLeftOf="@id/cvMatchAct_AwayClub" />

    <TextView
        android:id="@+id/txtMatchAct_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14/02"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@id/imgMatchAct_Icon_VS"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintLeft_toRightOf="@id/cvMatchAct_HomeClub"
        app:layout_constraintRight_toLeftOf="@id/cvMatchAct_AwayClub" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="130dp"
        android:gravity="center"
        android:text="Sân bóng ngoại ngữ - ĐHQG"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@id/cvMatchAct_HomeClub"
        app:layout_constraintRight_toLeftOf="@id/cvMatchAct_AwayClub"
        app:layout_constraintTop_toBottomOf="@id/imgMatchAct_Icon_VS" />

    <ImageView
        android:id="@+id/imgMatchAct_Icon_VS"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/vs_icon"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintLeft_toRightOf="@id/cvMatchAct_HomeClub"
        app:layout_constraintRight_toLeftOf="@id/cvMatchAct_AwayClub"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMatchAct_AwayClubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ha Nội FC"
        android:textSize="16dp"
        app:layout_constraintHorizontal_bias="0.90"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvMatchAct_AwayClub" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMatchAct_AwayClub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgMatchAct_AwayClubAvt"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:src="@mipmap/ic_launcher" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnFootballMatchAdd_AddNewMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Tạo mới"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>