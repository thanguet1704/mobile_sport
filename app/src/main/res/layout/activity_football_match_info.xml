<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.game.FootballMatchInfo"
    android:weightSum="10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#FFEB3B">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/btn_match_info_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_back"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="TẠO KÈO"
            android:textSize="26sp"
            android:gravity="center"
            android:textColor="#FF9800"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/btn_delete_match"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_delete_club"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="9">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvMatchInfoAct_HomeClub"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imgMatchInfoAct_HomeClubAvt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/news_hightlight" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtMatchInfo_HomeClubName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Arsenal FC"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="VS"
                android:textSize="36sp"
                android:textColor="#FF9800"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvMatchInfoAct_AwayClub"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imgMatchInfoAct_AwayClubAvt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/news_hightlight"
                    android:scaleType="fitXY"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvMatchInfoAct_AwayClubName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Ha Nội FC"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#000"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_match_info_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thứ Bảy, 23/05 từ 19:30"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#3F51B5"/>
        <TextView
            android:id="@+id/txtMatchInfoAct_Stadium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sân bóng Trường Đại học Ngoại Ngữ - ĐHQGHN"
            android:textSize="20sp"
            android:textColor="#3F51B5"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <TextView
            android:id="@+id/txtMatchInfo_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số 2 Phạm Văn Đồng, Quận Cầu Giấy"
            android:textSize="18dp"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtMatchInfoAct_PhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=" 0353005557"
        android:textSize="20sp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:drawableLeft="@drawable/ic_phone"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/txtMatchInfoAct_Description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=" Anh em giao lưu nhè nhẹeeee"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/broadcast"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
    <TextView
        android:id="@+id/tv_amounts_club"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 đội muốn tham gia trận đấu này"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <Button
        android:id="@+id/btnMatchInfoAct_ApplyMatch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Chọn đối"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bgbtnloginlogout"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_request"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tham gia"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bgbtnloginlogout"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textSize="16sp"/>

</LinearLayout>