<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    app:tabMode="fixed">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/FootballMatchAct_TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/FootballMatchAct_SuggestionsFbMatchTab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Gợi ý" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/FootballMatchAct_MyFbMatchTab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Của tôi" />

    </com.google.android.material.tabs.TabLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/FootballMatchAct_ViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.viewpager.widget.ViewPager>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/create_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_add_white"
            android:backgroundTint="#FFC107"/>
    </FrameLayout>


</LinearLayout>