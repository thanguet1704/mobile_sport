<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.game.MyFbMatch_TabFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/ll_none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_marginTop="-50dp"
            android:id="@+id/img_none"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/none"/>
        <TextView
            android:id="@+id/txt_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Không tìm thấy trận đấu nào gần đây."
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/My_Fb_Match_Fragment_listMatch_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lvMy_Fb_Match_Fragment_ListMatch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</LinearLayout>